<% content_for :body_content_title do %>
  <%= @classwork.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @classwork.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @classwork.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @classwork.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Copy</h1>
    <p>
      <%=raw @classwork.copy %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @classwork.file.present? %>
        <%= link_to 'file', @classwork.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="classworks">
      <% @classworks.each do |classwork| %>
        <li>
          <%= link_to classwork.title, refinery.classworks_classwork_path(classwork) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
