<% content_for :body_content_title do %>
  <%= @example.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @example.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @example.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @example.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Copy</h1>
    <p>
      <%=raw @example.copy %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @example.file.present? %>
        <%= link_to 'file', @example.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="examples">
      <% @examples.each do |example| %>
        <li>
          <%= link_to example.title, refinery.examples_example_path(example) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
