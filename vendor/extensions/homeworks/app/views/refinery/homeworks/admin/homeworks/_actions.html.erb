<ul>
  <% if ::Refinery::Homeworks::Admin::HomeworksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.homeworks_admin_homeworks_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_homeworks_admin_homework_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Homeworks::Admin::HomeworksController.sortable? && ::Refinery::Homeworks::Homework.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Homeworks"),
                 refinery.homeworks_admin_homeworks_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Homeworks"),
                 refinery.homeworks_admin_homeworks_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
