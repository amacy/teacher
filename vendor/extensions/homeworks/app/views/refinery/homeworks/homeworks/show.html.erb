<% content_for :body_content_title do %>
  <%= @homework.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @homework.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @homework.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @homework.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Copy</h1>
    <p>
      <%=raw @homework.copy %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @homework.file.present? %>
        <%= link_to 'file', @homework.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="homeworks">
      <% @homeworks.each do |homework| %>
        <li>
          <%= link_to homework.title, refinery.homeworks_homework_path(homework) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
