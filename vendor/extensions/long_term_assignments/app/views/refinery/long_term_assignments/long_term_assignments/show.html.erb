<% content_for :body_content_title do %>
  <%= @long_term_assignment.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @long_term_assignment.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @long_term_assignment.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @long_term_assignment.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Copy</h1>
    <p>
      <%=raw @long_term_assignment.copy %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @long_term_assignment.file.present? %>
        <%= link_to 'file', @long_term_assignment.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="long_term_assignments">
      <% @long_term_assignments.each do |long_term_assignment| %>
        <li>
          <%= link_to long_term_assignment.title, refinery.long_term_assignments_long_term_assignment_path(long_term_assignment) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
